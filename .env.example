# ===========================================
# BIDUA Coupon Commerce - Environment Config
# ===========================================

# Database
POSTGRES_USER=coupon
POSTGRES_PASSWORD=coupon_secret
POSTGRES_DB=coupon_commerce
DATABASE_URL=postgresql://coupon:coupon_secret@localhost:5432/coupon_commerce

# Redis
REDIS_URL=redis://localhost:6379

# Application
SECRET_KEY=your_super_secret_key_change_in_production
DEBUG=true

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com

# MSG91 SMS
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=COUPON
MSG91_TEMPLATE_ID=your_template_id
MSG91_ROUTE=4
MSG91_COUNTRY=91

# Affiliate Networks
# Admitad
ADMITAD_CLIENT_ID=your_admitad_client_id
ADMITAD_CLIENT_SECRET=your_admitad_client_secret
ADMITAD_WEBSITE_ID=your_admitad_website_id
ADMITAD_API_BASE=https://api.admitad.com

# VCommission
VCOMMISSION_API_KEY=your_vcommission_api_key
VCOMMISSION_PUBLISHER_ID=your_vcommission_publisher_id
VCOMMISSION_API_BASE=https://services.vcommission.com

# CueLinks
CUELINKS_API_KEY=your_cuelinks_api_key
CUELINKS_AFFILIATE_ID=your_cuelinks_affiliate_id
CUELINKS_API_BASE=https://api.cuelinks.com

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
NEXT_PUBLIC_APP_URL=http://localhost:3000

# S3 / Object Storage
S3_ACCESS_KEY_ID=your_s3_access_key_id
S3_SECRET_ACCESS_KEY=your_s3_secret_access_key
S3_BUCKET_NAME=your_s3_bucket_name
S3_REGION=ap-south-1
S3_PUBLIC_BASE_URL=https://your-bucket.s3.ap-south-1.amazonaws.com

# Sentry (Error Tracking)
SENTRY_DSN=

# Password Reset
PASSWORD_RESET_SALT=your_password_reset_salt

# JWT (backend uses JWT_SECRET_KEY internally; alias provided here)
JWT_SECRET=your_jwt_secret
