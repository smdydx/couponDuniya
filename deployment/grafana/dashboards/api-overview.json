{
  "title": "API Overview",
  "uid": "api-overview",
  "version": 1,
  "schemaVersion": 38,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {"expr": "rate(app_http_requests_total[5m])", "legendFormat": "{{method}} {{status}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency (p95)",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(app_http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95"}
      ]
    },
    {
      "type": "stat",
      "title": "Error Rate % (5m)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {"expr": "100 * (sum(rate(app_http_requests_total{status=~\"5..|4..\"}[5m])))/(sum(rate(app_http_requests_total[5m])))", "legendFormat": "Errors %"}
      ],
      "options": {"colorMode": "value"}
    },
    {
      "type": "stat",
      "title": "Redis Memory (MB)",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {"expr": "app_redis_memory_bytes / 1024 / 1024", "legendFormat": "Redis Mem"}
      ]
    }
  ]
}