# Application
APP_NAME="Coupon Commerce API"
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=127.0.0.1
PORT=8001

# Database
# Using psycopg3 driver and local postgres credentials (password: hardik123)
DATABASE_URL=postgresql+psycopg://postgres:hardik123@localhost:5432/couponali
DATABASE_ECHO=False
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# OTP
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# SMS (MSG91)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=COUPON
MSG91_TEMPLATE_ID=your-template-id

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@couponcommerce.com
FROM_NAME=Coupon Commerce

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Cashback
DEFAULT_CASHBACK_PERCENTAGE=2.5
MAX_CASHBACK_AMOUNT=500
MIN_WITHDRAWAL_AMOUNT=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
INTERNAL_API_KEY=your-internal-key

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=True

# File Upload
MAX_UPLOAD_SIZE_MB=5
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Affiliate Networks
## Admitad
ADMITAD_CLIENT_ID=your-admitad-client-id
ADMITAD_CLIENT_SECRET=your-admitad-client-secret
ADMITAD_REFRESH_TOKEN=your-admitad-refresh-token
ADMITAD_WEBSITE_ID=your-admitad-website-id
ADMITAD_API_BASE=https://api.admitad.com

## VCommission
VCOMMISSION_API_KEY=your-vcommission-api-key
VCOMMISSION_PUBLISHER_ID=your-vcommission-publisher-id
VCOMMISSION_API_BASE=https://services.vcommission.com

## CueLinks
CUELINKS_API_KEY=your-cuelinks-api-key
CUELINKS_PUBLISHER_ID=your-cuelinks-publisher-id
CUELINKS_AFFILIATE_ID=your-cuelinks-affiliate-id
CUELINKS_API_BASE=https://api.cuelinks.com

# Frontend Base URL (used for password reset links, email templates)
FRONTEND_BASE_URL=http://localhost:3000

# Admin IP Whitelist (comma-separated). Leave blank to disable restriction.
ADMIN_IP_WHITELIST=127.0.0.1,::1

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Password Reset / Security
PASSWORD_RESET_SALT=your-password-reset-salt

# Optional alias for consistency with other configs
EMAIL_FROM=${FROM_EMAIL}

# Storage (S3 / R2)
S3_ACCESS_KEY_ID=your-s3-access-key-id
S3_SECRET_ACCESS_KEY=your-s3-secret-access-key
S3_BUCKET_NAME=your-s3-bucket-name
S3_REGION=ap-south-1
S3_PUBLIC_BASE_URL=https://your-bucket.s3.ap-south-1.amazonaws.com

# MSG91 additional (routing/country)
MSG91_ROUTE=4
MSG91_COUNTRY=91

# JWT alias (keep existing JWT_SECRET_KEY for backward compatibility)
JWT_SECRET=${JWT_SECRET_KEY}
